{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=LegoApi.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "GET:/api/RateLimiting/public",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "GET:/api/RateLimiting/private",
        "Period": "1m",
        "Limit": 3
      },
      {
        "Endpoint": "POST:/api/RateLimiting/submit",
        "Period": "1m",
        "Limit": 2
      }
    ]
  }
}
