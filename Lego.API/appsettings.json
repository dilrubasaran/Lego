{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=LegoApi.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "LegoAPI",
    "Audience": "LegoUsers",
    "SecretKey": "super_secret_key_lego_jwt_authentication_2024_very_long_and_secure",
    "ExpirationMinutes": 15,
    "RefreshTokenDays": 7,
    "SlidingExtensionDays": 1,
    "AbsoluteRefreshTokenDays": 30
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "EnableIpRateLimiting": true,
    "IpWhitelist": [],
    "EndpointWhitelist": [],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "GET:/api/RateLimiting/public",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "GET:/api/RateLimiting/private",
        "Period": "1m",
        "Limit": 3
      },
      {
        "Endpoint": "POST:/api/RateLimiting/submit",
        "Period": "1m",
        "Limit": 2
      },
      {
        "Endpoint": "GET:/api/RateLimiting/anonymous-test",
        "Period": "1m",
        "Limit": 5
      }
    ]
  },
  "UserIdRateLimiting": {
    "EnableUserIdRateLimiting": true,
    "HttpStatusCode": 429,
    "Rules": [
      {
        "Endpoint": "*",
        "HttpMethod": "*",
        "ClientType": "UserId",
        "Limit": 10,
        "Period": "1m",
        "Description": "JWT token'lı kullanıcılar için genel limit - 1 dakikada 10 istek"
      }
    ]
  }
}
