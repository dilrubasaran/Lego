{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=LegoApi.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "LegoAPI",
    "Audience": "LegoUsers",
    "SecretKey": "super_secret_key_lego_jwt_authentication_2024_very_long_and_secure",
    "ExpirationMinutes": 60
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "GET:/api/RateLimiting/public",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "GET:/api/RateLimiting/private",
        "Period": "1m",
        "Limit": 3
      },
      {
        "Endpoint": "POST:/api/RateLimiting/submit",
        "Period": "1m",
        "Limit": 2
      }
    ]
  }
}
