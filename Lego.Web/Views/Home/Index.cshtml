@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Lego </h1>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>🧪 Test Sayfaları</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <a href="@Url.Action("LocalizationTest", "Home")" class="btn btn-primary">
                        🌍 Localization Test
                    </a>
                    <small class="text-muted d-block">Dil değiştirme testleri</small>
                </div>
                

            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>📊 Sistem Durumu</h5>
            </div>
            <div class="card-body">

                
                <div class="mb-3">
                    <strong>Localization:</strong>
                    <span class="badge bg-success">Aktif</span>
                </div>
                
                <div class="mb-3">
                    <strong>Database:</strong>
                    <span class="badge bg-success">Bağlı</span>
                </div>
            </div>
        </div>
    </div>
</div>
