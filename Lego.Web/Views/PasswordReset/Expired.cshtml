@{
    ViewData["Title"] = "Link Geçersiz";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Link Geçersiz
                    </h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-clock fa-3x text-muted"></i>
                    </div>
                    
                    <h5 class="text-danger mb-3">Şifre sıfırlama linki süresi dolmuş!</h5>
                    
                    <p class="text-muted mb-4">
                        Güvenlik nedeniyle şifre sıfırlama linkleri sınırlı süre geçerlidir. 
                        Yeni bir şifre sıfırlama linki talep etmeniz gerekmektedir.
                    </p>
                    
                    <div class="d-grid gap-2">
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>
                            Ana Sayfaya Dön
                        </a>
                        
                        <a href="@Url.Action("RequestPasswordReset", "PasswordReset")" class="btn btn-outline-secondary">
                            <i class="fas fa-redo me-2"></i>
                            Yeni Link Talep Et
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
