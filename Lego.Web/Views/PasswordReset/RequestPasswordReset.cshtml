@{
    ViewData["Title"] = "Şifre Sıfırlama Talebi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-key me-2"></i>
                        Şifre Sıfırlama Talebi
                    </h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @ViewBag.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(ViewBag.TestLink))
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>Test Linki:</strong><br>
                                <small class="text-break">@ViewBag.TestLink</small>
                                <div class="mt-2">
                                    <button class="btn btn-sm btn-outline-primary" onclick="copyToClipboard('@ViewBag.TestLink')">
                                        <i class="fas fa-copy me-1"></i>Kopyala
                                    </button>
                                    <a href="@ViewBag.TestLink" class="btn btn-sm btn-primary ms-2" target="_blank">
                                        <i class="fas fa-external-link-alt me-1"></i>Test Et
                                    </a>
                                </div>
                            </div>
                        }
                    }

                    <form asp-action="RequestPasswordReset" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta Adresi</label>
                            <input type="email" id="email" name="email" class="form-control" 
                                   placeholder="ornek@email.com" required />
                            <div class="form-text">
                                Şifre sıfırlama linki e-posta adresinize gönderilecektir.
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-paper-plane me-2"></i>
                                Şifre Sıfırlama Linki Gönder
                            </button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Ana Sayfaya Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                // Kopyalandı bildirimi
                const button = event.target.closest('button');
                const originalText = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check me-1"></i>Kopyalandı!';
                button.classList.remove('btn-outline-primary');
                button.classList.add('btn-success');
                
                setTimeout(() => {
                    button.innerHTML = originalText;
                    button.classList.remove('btn-success');
                    button.classList.add('btn-outline-primary');
                }, 2000);
            });
        }
    </script>
}
